<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gls.Cookbook.App.Views.VolumeMeasurementsPage"
             Title="Volume Measurements">
    <VerticalStackLayout>
        <Label Text="US" FontAttributes="Bold" FontSize="Title" HorizontalOptions="Start" />
        <ListView ItemsSource="{Binding UsMeasurements}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label FontSize="Subtitle" TextColor="Black" Text="{Binding FullName}" Margin="0,10" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="Metric" FontAttributes="Bold" FontSize="Title" HorizontalOptions="Start" />
        <ListView ItemsSource="{Binding MetricMeasurements}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label FontSize="Subtitle" TextColor="Black" Text="{Binding FullName}" Margin="0,10" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>