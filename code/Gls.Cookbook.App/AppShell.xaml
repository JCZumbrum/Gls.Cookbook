<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gls.Cookbook.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Gls.Cookbook.App.Views"
    Title="Recipe Box"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Recipes"
                     Icon="recipes.png"
                     ContentTemplate="{DataTemplate views:RecipesPage}" />
        <ShellContent Title="Ingredients"
                      Icon="carrot.png"
                     ContentTemplate="{DataTemplate views:IngredientsPage}" />
        <ShellContent Title="Measurements"
                     Icon="recipient.png"
                     ContentTemplate="{DataTemplate views:MeasurementTypesPage}" />
    </TabBar>

</Shell>
