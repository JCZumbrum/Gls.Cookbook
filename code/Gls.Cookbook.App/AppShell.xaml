<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gls.Cookbook.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Gls.Cookbook.App"
    xmlns:views="clr-namespace:Gls.Cookbook.App.Views"
    Title="Recipe Box"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Search"
                     Icon="search.png"
                     ContentTemplate="{DataTemplate views:SearchPage}" />
        <ShellContent Title="Add"
                     Icon="add.png"
                     ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Settings"
                     Icon="setting.png"
                     ContentTemplate="{DataTemplate local:MainPage}" />
    </TabBar>

</Shell>
